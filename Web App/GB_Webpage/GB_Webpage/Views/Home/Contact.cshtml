@model EmailForm;
@{
    ViewData["Title"] = "Kontakt | Grzegorz Bochnacki - Kancelaria Radcy Prawnego";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body>

    <div class="title-rectangle">
        <h1 class="title-text">Współpraca</h1>
    </div>

    <div class="introduction-container">
        <div class="row">
            <p class="introduced-text">
                Naszą misją jest świadczenie usług prawnych <strong>na najwyższym poziomie</strong>, które pomogą Klientom podejmować właściwe decyzje.
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 ">
            <div class="leftside-container">
                <div class="row">
                    <div class="contact-information">
                        <h4 class="content-text">Kancelaria Radcy Prawnego Grzegorz Bochnacki</h4>
                        <h5 class="content-text">Budynek "Babka Tower"</h5>
                        <p class="content-text">
                            Al. Jana Pawła II 80 lok. D39, VIII piętro <br />00-175 Warszawa
                        </p>
                        <p class="content-text">Telefon: 22 627 27 33<br /> E-mail: <a href="mailto:" kancelaria@bochnacki.com">kancelaria@bochnacki.com</a></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 ">
            <div class="rightside-container">
                <div class="row">
                    <form>
                        <div class="form-heading">
                            <div class="form-group">
                                <label for="Name" class="content-text">Imię i Nazwisko: <span class="symbol-required">*</span></label>
                                <input asp-for="Name" class="form-control" type="text" placeholder="2-50 znaków" autocomplete="off" />
                                <span id="error-name" class="text-danger content-text">asdasd</span>
                            </div>
                            <div class="form-group">
                                <label for="Email" class="content-text">E-mail: <span class="symbol-required">*</span></label>
                                <input asp-for="Email" class="form-control" type="text" placeholder="2-50 znaków" autocomplete="off" />
                                <span id="error-email" class="text-danger content-text">asdasd</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Message" class="content-text">Wiadomość: <span class="symbol-required">*</span></label>
                            <textarea asp-for="Message" class="form-control contact-message" type="text" rows="13" placeholder="3-1000 znaków" autocomplete="off"></textarea>
                            <span id="error-text" class="text-danger content-text">asdads</span>
                        </div>

                        <div class="button-container">
                            <input type="submit" value="Wyślij" class="btn btn-secondary" onclick="" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
