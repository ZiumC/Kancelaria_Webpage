@page
@using Microsoft.Extensions.Localization
@using GB_Webpage.Resources;
@inject IStringLocalizer<MainPage> mainPage;
@inject IStringLocalizer<Alert> alert;

@{
    ViewBag.Title = mainPage["0_title_tab"];

    var jsError = @Html.Raw(alert["0_js_error"]);

    var subtitle1 = @Html.Raw(mainPage["3.1_introduction"]);
    var subtitle2 = @Html.Raw(mainPage["3.2_introduction"]);

    var quote1 = @Html.Raw(mainPage["2.1_quote"]);
    var quote2 = @Html.Raw(mainPage["2.2_quote"]);

    var lengthOfLeftside = 4;
    var lengthOfRightside = 4;

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>
<body>

    <div class="container">
        <div class="quoted-title">
            <p class="quoted-text">@quote1</p>
            <p class="quoted-text">@quote2</p>
        </div>
    </div>
 
    <div class="fixed-background"></div>

    <noscript>
        <div class="alert-container">
            <div class="alert alert-warning content-text">
                @jsError
            </div>
        </div>
    </noscript>

    <div class="subtitle-container">
        <h1>@subtitle1</h1>
        <div class="row">
            <p class="subtitle-text">
                @subtitle2
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 ">
            <div class="leftside-container">

                @for (var i = 1; i <= lengthOfLeftside; i++)
                {
                    <p class="content-text">@Html.Raw(mainPage[$"4.{i}_leftside_container"])</p>
                }

            </div>
        </div>

        <div class="col-md-6 ">
            <div class="rightside-container">
                <div class="square-container">
                    <div class="square-element">
                        <div class="centered-text-square">

                            @for (var i = 1; i <= lengthOfRightside; i++)
                            {
                                <p class="box b-@i">@Html.Raw(mainPage[$"5.{i}_rightside_container"])</p>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>