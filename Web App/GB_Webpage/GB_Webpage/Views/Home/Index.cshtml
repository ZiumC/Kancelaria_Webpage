@page
@using Microsoft.Extensions.Localization
@using GB_Webpage.Resources;
@inject IStringLocalizer<MainPage> mp;

@{
    ViewBag.Title = mp["0_title_tab"];
    var quote1 = @Html.Raw(mp["2.1_quote"]);
    var quote2 = @Html.Raw(mp["2.2_quote"]);
    var introduction1 = @Html.Raw(mp["3.1_introduction"]);
    var introduction2 = @Html.Raw(mp["3.2_introduction"]);

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body>

    <div class="container">
        <div class="row row-bottom-margin row-right-align ">
            <div class="col"></div>
            <div class="col-6"><p class="quoted-text">@quote1</p></div>
            <div class="col"></div>
        </div>
        <div class="row">
            <div class="col"></div>
            <div class="col-6">
                <p class="quoted-text">@quote2</p>
            </div>
            <div class="col"></div>
        </div>
    </div>

    <div class="fixed-background"></div>

    <noscript>
        <div class="alert-container">
            <div class="alert alert-warning content-text">
                <strong>JavaScript jest wytłączony</strong>, mogą się pojawić pewne ograniczenia w poprawnym działaniu strony Internetowej.<strong> Do poprawnego działania włącz JavaScript</strong>.
            </div>
        </div>
    </noscript>

    <div class="introduction-container">
        <h1>@introduction1</h1>
        <div class="row">
            <p class="introduced-text">
                @introduction2
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 ">
            <div class="leftside-container">

                @for (var i = 1; i <= 4; i++)
                {
                    <p class="content-text">@Html.Raw(mp[$"4.{i}_leftside_container"])</p>
                }

            </div>
        </div>

        <div class="col-md-6 ">
            <div class="rightside-container">
                <div class="square-container">
                    <div class="square-element">
                        <div class="centered-text-square">

                            @for (var i = 1; i <= 4; i++)
                            {
                                <p class="box b-@i">@Html.Raw(mp[$"5.{i}_rightside_container"])</p>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>